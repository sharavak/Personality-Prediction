{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py",
            "methods": [
                "GET",
                "POST"
            ]
        }
    ],
    "regions": [
        "bom1"
    ],
    "installCommand": "pip install -r requirements.txt"
}